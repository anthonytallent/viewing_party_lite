<h2><%= @movie.title %></h2>

<div id="buttons-row">
  <div id="discover-page-button">
    <%= button_to "Discover Page", discover_path, method: :get %>
  </div>
  <div id="create-party-button">
    <%= button_to "Create Viewing Party", new_movie_party_path(@movie.id), method: :get %>
  </div>
</div>

<h3>Movie Information</h3>
<hr>  
<div id="movie-information">
  <div id="movie-info-piece">
    Vote Average: <%= @movie.vote_average %><br>
  </div>
  <div id="movie-info-piece">
    Runtime: <%= @movie.parsed_runtime %><br>
  </div>
  <div id="movie-info-piece">
    Genres: 
    <% @movie.genres.each do |genre| %>
      <%= genre %> 
    <% end %>
  </div>
</div>

<hr>  

<div id="summary">
  <h3>Summary</h3>
  <%= @movie.overview %>
</div>

<div id="cast-information">
  <h3>Cast Information</h3>
  <table> 
    <% @actors.each do |actor|  %>
      <tr>
        <td><b><%= actor.name %></b>, as <%= actor.character %></td>
        <td>Popularity Rating: <%= actor.popularity.round(1) %></td>
      </tr>
    <% end %>
  </table>
</div>

<div id="review-information">
  <h3>Reviews</h3>
  Total Review Count: <%= @reviews.count %><br>
  <% @reviews.each do |review|  %>
    <p>
    <b>Author</b>: <%= review.author %><br>
    <b>Rating</b>: <%= review.rating %><br>
    <b>Content</b>: <%= review.content %><br>
    </p>
  <% end %>
</div>