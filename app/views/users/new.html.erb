<h3>Create a New Account</h3>

<%= form_with url: users_path, method: :post, local: true do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %>
  <%= f.submit 'Register' %>
<% end %>