<h2> <%= current_user.name %>'s Discover Movies Page</h2>

<div id="top-rated-movies">
  <%= button_to "Top Rated Movies", movies_path, method: :get %>
</div>
<div id="movie-search">
  <%= form_with url: movies_path, method: :get, local: true do |f| %>
    <%= f.label :query, "Movie Title" %>
    <%= f.text_field :query %>
    <%= f.submit "Search" %>
  <% end %>
</div>
